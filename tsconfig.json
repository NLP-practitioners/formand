{
  "compilerOptions": {
    "target": "es2016",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "types": [
      "react"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}